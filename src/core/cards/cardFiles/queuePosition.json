{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Current Position In The Queue Is",
                            "wrap": true,
                            "horizontalAlignment": "Left",
                            "fontType": "Default",
                            "size": "Large",
                            "color": "Default",
                            "weight": "Bolder"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "1",
                            "wrap": true,
                            "size": "ExtraLarge",
                            "weight": "Bolder",
                            "color": "Attention",
                            "horizontalAlignment": "Center"
                        }
                    ]
                }
            ]
        }
    ]
}